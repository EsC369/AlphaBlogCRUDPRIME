<%# changed the @article to be usable in a partials to obj %>
<% obj.each do |article| %>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
                <div class="article-title">
                    <%= link_to article.title, article_path(article) %>
                </div>
                <div class="article-body">
                   <%= article.description %>
                   <br>
                   <div class="article-meta-details">
                        <small>Created by: <%= article.user.username if article.user %>,
                    </div>
                    <%# Puts  in a nice formatting %>
                    <div class="time">
                        <%= time_ago_in_words(article.created_at) %> ago
                        <br> 
                        last updated: <%= time_ago_in_words(article.updated_at) %> ago </small>
                    </div>

                    <%# Likes button Currently broken trying to utilize upvote%>
                    

                    <%# Likes button %>

                </div>
                <%# Restrict actions unless current user is valid %>
                <% if logged_in? && current_user == article.user %>
                <div class"article-actions">
                    <%= link_to "Edit", edit_article_path(article), class: "btn btn-xs btn-success" %>
                    <%= link_to "Show", article_path(article), class: "btn btn-xs btn-primary" %>
                    <%# Destroy method with confirmations %>
                    <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
<% end %>
