<!DOCTYPE html>
<h1 align="center">Login: </h1>


<%# Added session and url path within the form_for %>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |i| %>
    <div class ="form-group">
        <div class ="control-label col-sm-2"
        <%= i.label :email %>
    </div>
    <div class ="col-sm-5">
        <%= i.email_field :email, class: "form-control", placeholder: "Enter Your Email Here", autofocus: true %> 
    </div>
    </div>
    <div class ="form-group">
        <div class ="control-label col-sm-2"
        <%= i.label :password %>
        <br>
        </div>
            <div class ="col-sm-5">
                <%= i.password_field :password, class: "form-control", placeholder: "Enter Your Password Here" %>
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <br>
            <%= i.submit "Login", class: "btn btn-primary btn-lg" %>
            </div>
        </div>
    <% end %>

    <p align="center">[<%= link_to "Go Back To Articles", articles_path %>]
</html>